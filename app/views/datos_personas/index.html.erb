<h1>Datos Personas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>City</th>
      <th>Receive email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @datos_personas.each do |datos_persona| %>
      <tr>
        <td><%= datos_persona.name %></td>
        <td><%= datos_persona.country %></td>
        <td><%= datos_persona.city %></td>
        <td><%= datos_persona.receive_email %></td>
        <td><%= link_to 'Show', datos_persona %></td>
        <td><%= link_to 'Edit', edit_datos_persona_path(datos_persona) %></td>
        <td><%= link_to 'Destroy', datos_persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

